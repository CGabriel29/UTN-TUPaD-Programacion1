def calculadora_propinas():
    print("üßæ Bienvenido a la Calculadora de Propinas del Restaurante üßæ")
    
    try:
        monto_cuenta = float(input("Ingrese el monto total de la cuenta: $"))
        
        # C√°lculo de propinas
        propina_10 = monto_cuenta * 0.10
        propina_15 = monto_cuenta * 0.15
        
        total_10 = monto_cuenta + propina_10
        total_15 = monto_cuenta + propina_15
        
        # Mostrar resultados
        print("\nüí° Propinas sugeridas:")
        print(f"‚û° 10% de propina: ${propina_10:.2f} | Total a pagar: ${total_10:.2f}")
        print(f"‚û° 15% de propina: ${propina_15:.2f} | Total a pagar: ${total_15:.2f}")
    
    except ValueError:
        print("‚ö†Ô∏è Error: Por favor, ingrese un n√∫mero v√°lido para el monto de la cuenta.")

# Ejecutar la funci√≥n
calculadora_propinas()
